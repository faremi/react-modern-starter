{
  "name": "react-modern-starter",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "vite --port 3333",
    "format": "prettier-standard --format",
    "dev:serve": "SSR_PORT=3334 node server",
    "build": "yarn build:client && yarn build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.jsx --outDir dist/server",
    "generate": "vite build --outDir dist/static && yarn build:server && node prerender",
    "serve": "cross-env NODE_ENV=production SSR_PORT=3334 node server",
    "test": "c8 uvu tests -r esm -r @babel/register -i setup"
  },
  "lint-staged": {
    "*": [
      "prettier-standard --lint"
    ]
  },
  "dependencies": {
    "express": "^4.17.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-router-dom": "^5.2.0",
    "valtio": "^0.7.0"
  },
  "devDependencies": {
    "@babel/core": "7.10.4",
    "@babel/preset-react": "^7.12.10",
    "@babel/register": "7.10.4",
    "@vitejs/plugin-react-refresh": "^1.1.0",
    "vite-plugin-windicss": "^0.1.6",
    "eslint-plugin-valtio": "^0.2.0",
    "c8": "^7.5.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "esm": "^3.2.25",
    "husky": ">=4",
    "jsdom": "^16.4.0",
    "lint-staged": ">=10",
    "prettier-standard": "^16.3.0",
    "serve-static": "^1.14.1",
    "uvu": "^0.5.1",
    "vite": "^2.0.0-beta.69"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
